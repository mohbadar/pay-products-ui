{
  "name": "pay-products-ui",
  "description": "Payments products ui application",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">8.11.3"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "app/assets/**/*.js",
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node ./start.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "watch-live-reload": "./node_modules/.bin/grunt watch",
    "lint": "./node_modules/.bin/standard --fix",
    "lint-sass": "./node_modules/.bin/sass-lint -v",
    "test-with-coverage": "node ./node_modules/nyc/bin/nyc npm test",
    "test": "rm -rf ./pacts && ./node_modules/mocha/bin/mocha '!(node_modules)/**/*+(_test|_tests)'.js",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect",
    "publish-pacts": "./bin/publish-pacts.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "browsered/*",
      "Gruntfile.js",
      "app/browsered.js",
      "public/js/*",
      "locales/*"
    ]
  },
  "dependencies": {
    "@govuk-pay/pay-js-commons": "^2.10.0",
    "appmetrics": "5.0.x",
    "appmetrics-statsd": "3.0.x",
    "body-parser": "1.19.x",
    "client-sessions": "^0.8.0",
    "connect-flash": "^0.1.1",
    "cookie-parser": "1.4.x",
    "correlation-id": "^3.1.0",
    "csrf": "3.1.x",
    "currency-formatter": "^1.5.5",
    "express": "4.17.x",
    "govuk-frontend": "^2.13.0",
    "i18n": "^0.8.3",
    "lodash": "4.17.x",
    "minimist": "1.2.x",
    "morgan": "1.9.x",
    "nunjucks": "^3.2.0",
    "request": "^2.88.0",
    "requestretry": "^4.0.0",
    "serve-favicon": "2.5.0",
    "staticify": "3.3.x",
    "throng": "4.0.x",
    "tunnel": "0.0.6",
    "url-join": "^4.0.1",
    "winston": "2.4.x"
  },
  "devDependencies": {
    "@babel/core": "^7.5.4",
    "@babel/preset-env": "^7.5.4",
    "@pact-foundation/pact-node": "8.6.2",
    "chai": "^4.2.0",
    "cheerio": "^1.0.0-rc.3",
    "chokidar-cli": "latest",
    "envfile": "^3.0.0",
    "eslint": "5.16.x",
    "grunt": "1.0.x",
    "grunt-babel": "^8.0.0",
    "grunt-browserify": "^5.3.0",
    "grunt-cli": "1.3.x",
    "grunt-contrib-clean": "2.0.x",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-uglify": "^4.0.1",
    "grunt-contrib-watch": "1.1.x",
    "grunt-sass": "3.0.x",
    "html5shiv": "3.7.x",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "mocha": "6.1.x",
    "nock": "10.0.x",
    "node-sass": "4.12.x",
    "nodemon": "^1.19.1",
    "nunjucksify": "^2.2.0",
    "nyc": "^14.1.1",
    "pact": "4.3.2",
    "proxyquire": "~2.1.1",
    "sass-lint": "^1.13.1",
    "sinon": "7.3.x",
    "snyk": "1.193.x",
    "standard": "^13.0.2",
    "supertest": "^4.0.2"
  },
  "snyk": true
}
